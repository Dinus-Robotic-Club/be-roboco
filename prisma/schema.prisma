generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ENUMS
enum TournamentStageType {
  SINGLE_STAGE
  DOUBLE_STAGE
}

enum PlayoffType {
  SINGLE_ELIM
  DOUBLE_ELIM
}

enum CompetitionCategory {
  SUMO
  SOCCER
}

enum RoleParticipant {
  MEMBER
  LEADER
}

enum BracketType {
  UPPER
  LOWER
  GRAND_FINAL
}

enum StatusRounds {
  ACTIVE
  FINISHED
}

enum MatchStatus {
  PENDING
  SCHEDULED
  ONGOING
  FINISHED
  CANCELLED
}

enum RegistrationStatus {
  PENDING
  APPROVED
  REJECTED
}

// USER & TEAM
model User {
  uid        String   @id @default(uuid())
  email      String   @unique
  name       String
  password   String
  resetToken String?  @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([uid, email, name])
}

model Team {
  uid          String   @id @default(uuid())
  name         String   @unique
  email        String   @unique
  school       String
  logo         String?
  password     String
  category     CompetitionCategory
  point        Int?     @default(0)
  matchPlay    Int?     @default(0)
  golScore     Int?     @default(0)
  golConfident Int?     @default(0)
  golDifferent Int?     @default(0)
  knockoutScore Int?    @default(0)
  knockoutConfident Int? @default(0)
  knockoutDifferent Int? @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  participants Participant[]
  registrations Registration[]
  matchesA     Match[] @relation("TeamA")
  matchesB     Match[] @relation("TeamB")
  groupTeams   GroupTeam[]
  roundWins    MatchRound[] @relation("WinnerRounds")
  matchWins    Match[]
  score        LogScore[]

  @@index([name, email, school, category])
}

model Participant {
  uid              String   @id @default(uuid())
  name             String
  teamId           String
  image            String
  identityCardImage String
  roleInTeam       RoleParticipant
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  team             Team     @relation(fields: [teamId], references: [uid])

  @@index([name, teamId, roleInTeam])
}

// TOURNAMENT & SETTINGS
model Tournament {
  uid          String    @id @default(uuid())
  name         String
  slug         String    @unique
  description  String?
  startDate    DateTime
  endDate      DateTime?
  stageType    TournamentStageType
  playoffType  PlayoffType?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  settings     Setting?
  groups       Group[]
  brackets     Bracket[]
  registrations Registration[]
  matches      Match[]

  @@index([name, uid, slug, stageType, playoffType])
}

model Setting {
  uid              String     @id @default(uuid())
  tournamentId     String     @unique
  defaultBestOf    Int        @default(3)
  groupBestOf      Int        @default(1)
  upperBestOf      Int        @default(3)
  lowerBestOf      Int        @default(3)
  grandFinalBestOf Int        @default(5)
  roundDurationSoccer Float?  @default(3)
  roundDurationSumo  Float?   @default(5)
  createdAt      DateTime     @default(now())

  tournament     Tournament   @relation(fields: [tournamentId], references: [uid])

  @@index([uid, tournamentId, defaultBestOf, grandFinalBestOf, groupBestOf, lowerBestOf, upperBestOf])
}

// REGISTRATION & ATTENDANCE
model Registration {
  uid          String   @id @default(uuid())
  teamId       String
  tournamentId String
  qrToken      String?  @unique
  qrUrl        String?
  twibbon      String?
  invoice      String?
  status       RegistrationStatus @default(PENDING)
  registeredAt DateTime @default(now())
  verifiedAt   DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  team         Team       @relation(fields: [teamId], references: [uid])
  tournament   Tournament @relation(fields: [tournamentId], references: [uid])
  attendance   Attendance?

  @@index([uid, teamId, tournamentId, status])
}

model Attendance {
  uid            String   @id @default(uuid())
  registrationId String   @unique
  isPresent      Boolean  @default(false)
  scannedAt      DateTime?
  scannedBy      String

  registration   Registration @relation(fields: [registrationId], references: [uid])

  @@index([uid, registrationId, isPresent, scannedAt, scannedBy])
}

// GROUP STAGE
model Group {
  uid          String   @id @default(uuid())
  tournamentId String
  name         String
  createdAt    DateTime @default(now())

  tournament   Tournament @relation(fields: [tournamentId], references: [uid])
  teams        GroupTeam[]
  matches      Match[]

  @@index([uid, tournamentId, name])
}

model GroupTeam {
  uid      String @id @default(uuid())
  groupId  String
  teamId   String
  seed     Int?

  group    Group @relation(fields: [groupId], references: [uid])
  team     Team  @relation(fields: [teamId], references: [uid])

  @@unique([groupId, teamId])
  @@index([uid, groupId, teamId])
}

// MATCH & ROUND
model Match {
  uid          String  @id @default(uuid())
  tournamentId String
  groupId      String?
  bracketId    String?
  teamAId      String
  teamBId      String
  bestOf       Int      @default(3)
  scoreA       Int      @default(0)
  scoreB       Int      @default(0)
  winnerId     String?
  status       MatchStatus @default(PENDING)
  roundLabel   String?
  category     CompetitionCategory?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tournament   Tournament @relation(fields: [tournamentId], references: [uid])
  group        Group?     @relation(fields: [groupId], references: [uid])
  bracket      Bracket?   @relation(fields: [bracketId], references: [uid])
  teamA        Team       @relation("TeamA", fields: [teamAId], references: [uid])
  teamB        Team       @relation("TeamB", fields: [teamBId], references: [uid])
  winner       Team?      @relation(fields: [winnerId], references: [uid])
  rounds       MatchRound[]
  Score        LogScore[]

  @@index([tournamentId, uid, groupId, bracketId, teamAId, teamBId, bestOf, scoreA, scoreB, winnerId, status])
}

model MatchRound {
  uid          String  @id @default(uuid())
  matchId      String
  roundNumber  Int
  winnerId     String?
  scoreDetail  String?
  status       StatusRounds @default(ACTIVE) 
  endTime      String
  createdAt    DateTime @default(now())

  match        Match    @relation(fields: [matchId], references: [uid])
  winner       Team?    @relation("WinnerRounds", fields: [winnerId], references: [uid])
  Score        LogScore[]
  @@unique([matchId, roundNumber])
  @@index([uid, matchId, roundNumber, winnerId, scoreDetail])
}

model LogScore {
  uid     String  @id @default(uuid())
  matchId String  
  teamId  String
  roundId String
  golScore Int?   @default(0)
  knockout Int?   @default(0)
  pinalty  Int?   @default(0)
  foul     Int?   @default(0)
  yellowCard Int? @default(0)
  redCard  Int?   @default(0)

  time    String

  match  Match?  @relation(fields: [matchId], references: [uid])
  round  MatchRound? @relation(fields: [roundId], references: [uid])
  team   Team?  @relation(fields: [teamId], references: [uid])   
}

// BRACKET
model Bracket {
  uid           String   @id @default(uuid())
  tournamentId  String
  type          BracketType
  round         Int
  name          String?
  createdAt     DateTime @default(now())

  tournament    Tournament @relation(fields: [tournamentId], references: [uid])
  matches       Match[]

  @@index([uid, tournamentId, type, round, name])
}
